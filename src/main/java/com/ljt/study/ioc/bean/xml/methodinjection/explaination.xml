<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 部署为原型的（非单例的）有状态的bean -->
	<bean id="command" class="com.ljt.study.ioc.bean.xml.methodinjection.Command" scope="prototype" />
	
	<!-- commandProcessor使用statefulCommandHelper -->
	<bean id="commandManager" class="com.ljt.study.ioc.bean.xml.methodinjection.AbstractCommandManager">
	    <lookup-method name="createCommand" bean="command" />
	</bean>
	
	
	<bean id="myValueCalculator" class="com.ljt.study.ioc.bean.xml.methodinjection.MyValueCalculator">
	    <!-- 任意方法替换 -->
	    <replaced-method name="computeValue" replacer="replacementComputeValue">
	        <arg-type>String</arg-type>
	    </replaced-method>
	</bean>
	
	<bean id="replacementComputeValue" class="com.ljt.study.ioc.bean.xml.methodinjection.ReplacementComputeValue" />
		
</beans>